<UserControl x:Class="Bank.UcSimpleBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bank"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border    Margin="5,5,5,5" BorderBrush="{StaticResource BorderBackgroundColor}" BorderThickness="3" CornerRadius="9,9,9,9"     >
            <Rectangle Fill="{StaticResource BorderBackgroundColor}" ></Rectangle>
        </Border>
    </Grid>
</UserControl>
